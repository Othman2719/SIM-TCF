{
  "appId": "com.brixelacademy.tcf-simulator-pro",
  "productName": "TCF Simulator Pro",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "electron-preload.js",
    "package.json"
  ],
  "extraResources": [
    "assets/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "assets/icon.ico",
    "publisherName": "Brixel Academy",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "TCF Simulator Pro",
    "include": "installer.nsh"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.education",
    "bundleVersion": "1.0.0"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Education",
    "desktop": {
      "Name": "TCF Simulator Pro",
      "Comment": "Test de Connaissance du Fran√ßais - Simulateur Professionnel",
      "Keywords": "TCF;French;Test;Education;Language"
    }
  },
  "publish": {
    "provider": "generic",
    "url": "https://brixelacademy.com/tcf-simulator/updates"
  }
}